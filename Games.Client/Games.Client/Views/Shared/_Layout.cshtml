    </nav>

    <div class="container-fluid text-center">
        <div class="row content ">
            <div class="col-sm-2 sidenav" style="font-size:10px; ">
                <div style="background-color:white">
                    @Html.Partial("_UserPassLoggedIn", new Games.Client.Models.LoginViewModel())
                </div>
                <div></div>
                <div></div>
                <div style="background-color:white">
                    @Html.Partial("_LinksLoggedIn")
                </div>
            </div>
            <div class="col-sm-10" style="font-size:20px;">
                 @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>


